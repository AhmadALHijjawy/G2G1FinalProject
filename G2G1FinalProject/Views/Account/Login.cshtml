@model G2G1FinalProject.Models.User

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger">@ViewBag.Error</div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label><br />
                <input asp-for="UserName" required="required" aria-required="true">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label><br />
                <input asp-for="Password" required="required" area-required="true">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="control-label">
                    <input type="checkbox"> Remember me
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<p>Don't Have an Account? <a asp-action="Register" asp-controller="Account">Register</a></p>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
