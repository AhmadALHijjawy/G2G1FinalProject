@model IEnumerable<G2G1FinalProject.Models.Trainer>

@{
    ViewData["Title"] = "Index";
}

<h1>Home</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TrainerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainerInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainerCv)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerCv)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.TrainerId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Index" asp-controller="Home">Back to Home</a>
</div>
